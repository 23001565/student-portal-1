generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enum cho Thông báo
enum Priority {
  low
  normal
  high
}

enum Audience {
  all
  students
  lecturers
}

enum EnrollmentStatus {
  ENROLLED
  WITHDRAWN
  DROPPED
}

// --- MODELS ---

model Admin {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  password      String
  name          String
  announcements Announcement[]
}

model Student {
  id           Int          @id @default(autoincrement())
  code         String       @unique // SỬA: Int -> String để nhập "HS123"
  email        String       @unique
  name         String
  password     String
  
  // Thông tin cá nhân (Khớp ProfilePage)
  dob          DateTime?
  gender       String?
  address      String?
  phone        String?
  year         Int
  className    String?      // Lớp hành chính (12A1)

  majorId      Int
  major        Major        @relation(fields: [majorId], references: [id])
  curriculumId Int
  curriculum   Curriculum   @relation(fields: [curriculumId], references: [id])

  enrollments  Enrollment[]
  isActive     Boolean      @default(true)
}

model Major {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
}

model Curriculum {
  id        Int       @id @default(autoincrement())
  name      String    // VD: K65 - CNTT
  startYear Int
  endYear   Int
  students  Student[]
}

model Course {
  id      Int     @id @default(autoincrement())
  code    String  @unique // VD: INT3306
  name    String
  credits Int
  classes Class[]
}

model Class {
  id            Int          @id @default(autoincrement())
  code          String       
  courseId      Int
  course        Course       @relation(fields: [courseId], references: [id])
  semester      Int
  year          Int
  capacity      Int          @default(50)
  enrolledCount Int          @default(0)
  isRegistrationOpen Boolean @default(true)
  // Quan trọng: Lưu lịch học dạng JSON để khớp Frontend
  // VD: [{"day": "T2", "slots": [1,2,3], "room": "301"}]
  schedule      Json?        
  
  enrollments   Enrollment[]
  @@unique([code, semester, year])
}

model Enrollment {
  id          Int              @id @default(autoincrement())
  studentId   Int
  student     Student          @relation(fields: [studentId], references: [id])
  classId     Int
  class       Class            @relation(fields: [classId], references: [id])
  status      EnrollmentStatus @default(ENROLLED)
  
  // Điểm số
  midTerm     Float?
  finalExam   Float?
  total10     Float?
  total4      Float?
  letterGrade String?

  @@unique([studentId, classId])
}

model Announcement {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  priority   Priority @default(normal)
  audience   Audience @default(all)
  postedById Int?
  postedBy   Admin?   @relation(fields: [postedById], references: [id])
  postedAt   DateTime @default(now())
}

model SystemConfig {
  id        Int      @id @default(autoincrement())
  key       String   @unique // Ví dụ: "REGISTRATION_PERIOD"
  value     String?  // Có thể lưu JSON hoặc text
  startDate DateTime? // Ngày bắt đầu đợt đăng ký
  endDate   DateTime? // Ngày kết thúc đợt đăng ký
  isActive  Boolean  @default(false)
}